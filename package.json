{
    "name": "delivery-notes",
    "version": "1.0.0",
    "description": "A web extension to record and manage notes and experiences from your takeout orders on websites like Lieferando.",
    "main": "index.js",
    "scripts": {
        "translate": "wet",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "web-ext lint -i ./dist",
        "build": "web-ext build",
        "prepare": "parcel --public-url ./ src/popup/popup.html src/options/options.html src/views/installed.html src/background.js",
        "dev:options": "parcel --public-url ./ src/options/options.html",
        "run:chrome": "web-ext run --target=chromium --browser-console",
        "run:firefox": "web-ext run --target=firefox-desktop --browser-console",
        "start:chrome": "npm-run-all --parallel prepare run:chrome",
        "start:firefox": "npm-run-all --parallel prepare run:firefox"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zlypher/delivery-notes.git"
    },
    "bugs": {
        "url": "https://github.com/zlypher/delivery-notes/issues"
    },
    "author": "Thomas Prochazka <thomas.prochazka@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "parcel": "^2.12.0",
        "web-ext": "^8.2.0",
        "web-ext-translator": "^4.3.0",
        "webextension-polyfill": "^0.12.0"
    },
    "dependencies": {
        "mixpanel-browser": "^2.55.0",
        "quill": "^2.0.2"
    }
}
